<UserControl x:Class="ANDISI_Presentacion.VISTAS.TRAMITES.GSI.Gsi_Obs"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ANDISI_Presentacion.VISTAS.TRAMITES.GSI"
             mc:Ignorable="d" >
    <Border Style="{StaticResource Border-tab}">
        <Grid>
            <StackPanel Margin="10">
                <TextBlock Text="Nombre de Alerta:" Margin="5"/>
                <TextBox x:Name="TipoAlertaTextBox" Margin="5"/>

                <TextBlock Text="Observacioón:" Margin="5"/>
                <TextBox x:Name="DescripcionAlertaTextBox" Margin="5"/>

                <CheckBox x:Name="ActivarAlertaCheckBox" Content="Activar Alerta" Margin="5"/>

                <Button Content="Guardar" Margin="10" />

                <DataGrid x:Name="AlertasDataGrid" AutoGenerateColumns="True" Margin="10" Height="150"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
