<UserControl x:Class="ANDISI_Presentacion.VISTAS.TRAMITES.GSI.Gsi_Dir"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d">
    <Border  Style="{StaticResource Border-tab}">
        <Grid Background="White">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Style="{StaticResource stack_margin}">

                <Label Content="Calle"  />
                <TextBox Style="{StaticResource control_heigh}"/>

                <Label Content="Código Postal"   />
                <TextBox Style="{StaticResource control_heigh}"/>

                <Label Content="Municipio/Alcaldía"  />
                <ComboBox Style="{StaticResource control_heigh}" >
                    <ComboBoxItem Content="Alcaldía 1" />
                    <ComboBoxItem Content="Alcaldía 2" />
                    <ComboBoxItem Content="Alcaldía 3" />
                </ComboBox>

            </StackPanel>

            <StackPanel Grid.Column="1" Style="{StaticResource stack_margin}">

                <Label Content="Núm Ext"  />
                <TextBox  Style="{StaticResource control_heigh}" MaxLength="50"/>

                <Label Content="País"  />
                <ComboBox Style="{StaticResource control_heigh}">
                    <ComboBoxItem Content="País 1" />
                    <ComboBoxItem Content="País 2" />
                    <ComboBoxItem Content="País 3" />
                </ComboBox>

                <Label Content="Colonia"  />
                <TextBox  Style="{StaticResource control_heigh}" MaxLength="50"/>

            </StackPanel>

            <StackPanel Grid.Column="2" Style="{StaticResource stack_margin}">
                <Label Content="Núm Int"  />
                <TextBox  Style="{StaticResource control_heigh}" MaxLength="50"/>

                <Label Content="Estado"  />
                <ComboBox  Style="{StaticResource control_heigh}">
                    <ComboBoxItem Content="Estado 1" />
                    <ComboBoxItem Content="Estado 2" />
                    <ComboBoxItem Content="Estado 3" />
                </ComboBox>

            </StackPanel>
        </Grid>
    </Border>

</UserControl>
