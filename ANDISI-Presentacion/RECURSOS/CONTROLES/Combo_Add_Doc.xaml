<UserControl x:Class="ANDISI_Presentacion.RECURSOS.CONTROLES.Combo_Add_Doc"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ANDISI_Presentacion.RECURSOS.CONTROLES"
             xmlns:fa="http://schemas.fontawesome.io/icons/"   >
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <ComboBox x:Name="ComboBoxMerged" Grid.Row="0" BorderThickness="1" Height="30" />
        <StackPanel Grid.Column="1"  Orientation="Horizontal">
            <Button   Name="btn_view"  Height="30" Cursor="Hand" Background="{StaticResource bg-btn}">
                <Button.Content>
                    <fa:FontAwesome Icon="Eye" Width="15" ></fa:FontAwesome>
                </Button.Content>
            </Button>
            <Button  Name="btn_upload"  Height="30" Cursor="Hand" Background="{StaticResource bg-btn}">
                <Button.Content>
                    <fa:FontAwesome Icon="Plus" Width="15" ></fa:FontAwesome>
                </Button.Content>
            </Button>

        </StackPanel>

    </Grid>
    
</UserControl>
