<UserControl x:Class="ANDISI_Presentacion.RECURSOS.CONTROLES.Combo_Add"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ANDISI_Presentacion.RECURSOS.CONTROLES"
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <!--<Border CornerRadius="4,0,0,4" BorderBrush="Gray" BorderThickness="1" Background="White" >-->
        <ComboBox Grid.Row="0" BorderThickness="1" Height="30" />
        <!--</Border>-->
        <StackPanel Grid.Column="1"  Orientation="Horizontal">
            <Button   Name="btn_view" Visibility="Collapsed" Height="30" Cursor="Hand" Background="{StaticResource bg-btn}">
            <Button.Content>
                <fa:FontAwesome Icon="Eye" Width="15" ></fa:FontAwesome>
            </Button.Content>
        </Button>
            <Button  Name="btn_upload"  Height="30" Cursor="Hand" Background="{StaticResource bg-btn}">
            <Button.Content>
                <fa:FontAwesome Icon="Plus" Width="15" ></fa:FontAwesome>
            </Button.Content>
        </Button>
        </StackPanel>

    </Grid>
</UserControl>
