<UserControl x:Class="ANDISI_Presentacion.RECURSOS.CONTROLES.Datepicker_Upload"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ANDISI_Presentacion.RECURSOS.CONTROLES"
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <!--<TextBox Height="30" Grid.Row="0" BorderThickness="1" />-->
        <DatePicker Height="30" Grid.Row="0" BorderThickness="1" />

        <Button Height="30" Grid.Column="1" Name="btn_delete" Visibility="Collapsed" Style="{StaticResource btn-delete-hover}" >
            <Button.Content>
                <fa:FontAwesome Icon="Times" Width="15" ></fa:FontAwesome>
            </Button.Content>
        </Button>
        <Button Grid.Column="2"  Name="btn_upload"  Height="30" Cursor="Hand" Background="{StaticResource bg-btn}">
            <Button.Content>
                <fa:FontAwesome Icon="Upload" Width="15" ></fa:FontAwesome>
            </Button.Content>
        </Button>
        <Button Grid.Column="3" Visibility="Collapsed" Name="btn_view" Height="30" Cursor="Hand" Background="{StaticResource bg-btn}">
            <Button.Content>
                <fa:FontAwesome Icon="Eye" Width="15" ></fa:FontAwesome>
            </Button.Content>
        </Button>
    </Grid>
</UserControl>
