<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Style TargetType="Popup">
        <Setter Property="AllowsTransparency" Value="True"/>
        <Setter Property="Placement" Value="Center"/>
        <Setter Property="StaysOpen" Value="False"/>
    </Style>

    <!-- Estilo para el Border dentro del Popup -->
    <Style TargetType="Border" x:Key="PopupBorderStyle">
        <Setter Property="CornerRadius" Value="5"/>
        <Setter Property="Background" Value="{StaticResource bg-bar}"/>
    </Style>

    <!-- Estilo para el StackPanel dentro del Popup -->
    <Style TargetType="StackPanel" x:Key="PopupStackPanelStyle">
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

</ResourceDictionary>