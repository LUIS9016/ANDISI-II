    <Style x:Key="Border-tab" TargetType="Border">
        <Setter Property="BorderBrush" Value="Gray"/>
        <Setter Property="Margin" Value="0,5,10,0"/>
        <Setter Property="CornerRadius" Value="3"/>
        <Setter Property="BorderThickness" Value="1"/>
    </Style>
