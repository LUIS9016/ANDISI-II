        <Setter Property="CornerRadius" Value="3"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Background" Value="{StaticResource bg-white}"/>
        
    </Style>

    <Style x:Key="txt-block" TargetType="Control">
        <Setter Property="Height" Value="30"/>
        <Setter Property="Background" Value="LightGray"/>
        <Setter Property="IsEnabled" Value="False"/>
    </Style>
    <Style x:Key="txt-30-rnd" TargetType="TextBox">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate>
                    <Border CornerRadius="4,0,0,4" BorderBrush="Gray" BorderThickness="1" Background="White" Height="30" >
                        <TextBox Height="22" BorderThickness="0" />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="txt-30-rnd-block" TargetType="TextBox">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate>
                    <Border CornerRadius="4,4,4,4" BorderBrush="Gray" BorderThickness="1" Background="{TemplateBinding Background}" Height="30" >
                        <TextBox Height="22"  BorderThickness="0" Background="Transparent"  IsReadOnly="True"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="Background" Value="LightGray"/>
        <Setter Property="IsEnabled" Value="False"/>
    </Style>
    <Style x:Key="btn" TargetType="Button">
        <Setter Property="Height" Value="30"/>
        <Setter Property="Width" Value="60"/>
