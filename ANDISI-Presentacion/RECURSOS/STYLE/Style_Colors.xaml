<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="bg-principal">
        <SolidColorBrush.Color>
            <Color A="255"
                   R="100"
                   G="44"
                   B="212">
            </Color>
        </SolidColorBrush.Color>
    </SolidColorBrush>
    <SolidColorBrush x:Key="bg-bar">
        <SolidColorBrush.Color>
            <Color A="170"
                   R="100"
                   G="44"
                   B="212">
            </Color>
        </SolidColorBrush.Color>
    </SolidColorBrush>
    <SolidColorBrush x:Key="bg-white" Color="White"/>
    <SolidColorBrush x:Key="bg-btn" Color="LightSkyBlue" />
    <Style x:Key="btn-delete-hover" TargetType="Button">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                 BorderBrush="{TemplateBinding BorderBrush}"
                 BorderThickness="1">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="Coral"/>
                            <Setter Property="Foreground" Value="Black"/>
                            <Setter Property="Cursor" Value="Hand" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="Height" Value="30"/>
        <Setter Property="Background" Value="LightCoral"/>
        <Setter Property="Foreground" Value="Black"/>
    </Style>
    <Color x:Key="PrimaryColor" 
       R="100"
       G="50"
       B="220"
       A="255"/>

    <Color x:Key="SecondColor" 
       R="81"
       G="44"
       B="212"
       A="255"/>
</ResourceDictionary>